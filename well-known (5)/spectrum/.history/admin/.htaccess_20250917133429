# Disable directory listing
Options -Indexes

RewriteEngine On

# Allow all PHP files in /admin (not just index/login/logout)
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|woff2?|ttf|eot)$ [NC]

# Keep ajax folder safe too
RewriteCond %{REQUEST_URI} !^/spectrum/admin/ajax/ [NC]

# Redirect only unknown requests (not real files)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /spectrum/admin/index.php [R=302,L]
